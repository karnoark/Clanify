{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",

    "isolatedModules": true,
    "noImplicitUseStrict": false,
    "preserveConstEnums": true,

    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/__tests__/setup/jest.config.js" // "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules/*",
    "claude/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    ".expo",
    ".expo-shared",
    "build",
    "dist",
    ".vscode",
    "android"
  ]
}
